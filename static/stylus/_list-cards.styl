.list-cards
	position relative
	z-index 10
	@media md-all
		transform translateY(-45px)
	.block
		display flex
		justify-content space-between
		@media md-all
			flex-wrap wrap
			flex-direction column
		.block-item
			width 33%
			padding-top 45px
			padding-bottom 100px
			padding-left 50px
			padding-right 50px
			display flex
			flex-direction column
			@media lg
				padding-right 30px
				padding-left 30px
				padding-bottom 60px
			@media md-all
				width 100%
				margin-bottom 20px
				padding-bottom 40px
				padding-right 20px
				padding-left 20px
			&:nth-child(1)
				background-color $red
				transform translateY(-225px)
				@media md-all
					transform translateY(0)
			&:nth-child(2)
				background-color #696969
				transform translateY(-120px)
				@media md-all
					transform translateY(0)
			&:nth-child(3)
				background-color #444444
				transform translateY(-225px)
				@media md-all
					transform translateY(0)
					margin-bottom 0
			.item-img
				width 46px
				height 46px
				margin 0 auto
				.img
					width 100%
					height 100%
					background-size contain
					background-repeat no-repeat
					background-position center
		.item-text-wrapper
			max-width 360px
			@media md-all
				max-width 100%
		.item-title
			margin-top 50px
			color $white
			font-size 30px
			font-weight 800
			line-height 1
			text-transform uppercase
			@media lg
				font-size 26px
			@media md-all
				font-size 24px
				margin-top 35px
		.item-text
			margin-top 45px
			color $white
			font-size 14px
			font-weight 400
			line-height 1.6
			text-transform uppercase
			@media md-all
				margin-top 30px
				font-size 12px