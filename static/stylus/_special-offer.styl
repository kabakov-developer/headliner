.special-offer
	padding-top 115px
	padding-bottom 150px
	background-size cover
	background-position center
	background-repeat no-repeat
	position relative
	overflow hidden
	@media md-all
		padding-top 50px
		padding-bottom 110px
	&:before
		content ''
		position absolute
		display block
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(29, 29, 29, .9)
		z-index 2
	&:after
		content ''
		display block
		position absolute
		top 70%
		left 47%
		margin-right -50%
		transform translate(-50%, -50%)
		width 373px
		height 797px
		background-image url(/img/special-offer/human.png)
		background-position center
		background-repeat no-repeat
		background-size contain
		z-index 10
		@media custom
			width 373px
			height 680px
		@media lg
			width 320px
			height 500px
			background-image none
		@media md
			width 320px
			height 520px
		@media sm
			width 167px
			height 280px
		@media xs
			width 167px
			height 280px
	.main-block
		position relative
		display flex
		justify-content space-between
		@media md
			align-items center
			justify-content center
		@media md-all
			flex-direction column
			padding 0 20px
		.title
			top 100px
			left 0
			color $white
			font-size 200px
			font-weight 700
			line-height .8
			text-transform uppercase
			position absolute
			z-index 1
			@media md-all
				font-size 72px
