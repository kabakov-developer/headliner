	.borders-block
		display flex
		flex-direction column
		align-items center
		position  relative
		@media md-all
			margin-top 40px
		&:after
			content ''
			display block
			position absolute
			bottom -52px
			left 0
			width 100%
			// width 800px
			height 825px
			border 20px solid $red
			z-index 1
			@media custom
				width 100%
			@media lg
				width 100%
			@media md-all
				border 0px solid transparent
	.block
		position relative
		z-index 10
		width 50%
		@media md-all
			width 100%
		.block-item
			.titles
				.item-title
					color $red
					font-size 30px
					font-weight 700
					text-transform uppercase
					line-height 1
					@media md-all
						font-size 16px
				.item-subtitle
					color $white
					font-size 48px
					font-weight 700
					text-transform uppercase
					line-height 1
					@media md-all
						font-size 30px
		.bottom-text
			max-width 460px
			margin-top 60px
			.text-titles
				margin-bottom 20px
				padding-left 30px
				position relative
				&:before
					content ''
					width 11px
					height 18px
					position absolute
					left 0
					top 8px
					background-image url(/img/download-presentation/lines.png)
					background-position center
					background-repeat no-repeat
				.text-title
					margin-bottom 25px
					color $white
					font-size 24px
					font-weight 700
					line-height 30px
					text-transform uppercase
				.sub-title
					color $white
					font-size 16px
					font-weight 300
					line-height 22px
					text-transform uppercase
					span
						color $red
	.form
		width 70%
		@media md-all
			width 100%
		.form-title
			margin-bottom 25px
			color $white
			font-size 30px
			font-weight 700
			line-height 1.1
			text-transform uppercase
			@media md-all
				font-size 24px
		.form-subtitle
			margin-bottom 45px
			color #7c7c7c
			font-size 16px
			font-weight 700
			line-height 1.1
			text-transform uppercase
			@media md-all
				font-size 24px
			span
				color $red
		.form-input
			margin-bottom 35px
			position relative
			z-index 20
			width 100%
			max-width 492px
			@media xs
				max-width 100%
			input
				width 100%
				padding-bottom 15px
				color $white
				font-size 24px
				font-weight 300
				line-height 1
				text-transform uppercase
				border-top none
				border-right none
				border-left none
				border-color #a3a3a3
				border-width 1px
				background-color transparent
				outline none
				@media md-all
					font-size 16px
				&:placeholder
					color #a3a3a3
		.form-submit
			margin-top 85px
			position relative
			z-index 10
			text-align right
			@media md-all
				margin-top 35px
			input
				cursor pointer
				width 351px
				padding 25px 0
				color $white
				font-size 24px
				font-weight 800
				line-height 1
				text-transform uppercase
				border none
				background-color $red
				box-shadow 0 31px 49px rgba(245, 38, 63, 0.44)
				@media md-all
					padding 15px 0
					width 220px