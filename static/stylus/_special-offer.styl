.special-offer
	padding-top 115px
	padding-bottom 150px
	background-size cover
	background-position center
	background-repeat no-repeat
	position relative
	// overflow hidden
	@media custom
		padding-top 80px
	@media lg
		padding-top 80px
	@media md-all
		padding-top 50px
		padding-bottom 78px
	&:before
		content ''
		position absolute
		display block
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(29, 29, 29, .9)
		z-index 2
	&:after
		content ''
		display block
		position absolute
		// top 60%
		bottom -86px
		left 47%
		// margin-right -50%
		transform translate(-50%, 0)
		// transform translate(-50%, -50%)
		width 373px
		height 797px
		background-image url(/img/special-offer/human.png)
		background-position center
		background-repeat no-repeat
		background-size contain
		z-index 10
		@media custom
			width 320px
			height 600px
			bottom -32px
		@media lg
			background-image none
		@media md-all
			background-image none
		@media sm
			width 167px
			height 280px
		@media xs
			width 167px
			height 280px
	.main-block
		position relative
		display flex
		justify-content space-between
		@media md
			align-items center
			justify-content center
		@media md-all
			flex-direction column
	.borders-block
		display flex
		flex-direction column
		align-items center
		position  relative
		@media md-all
			margin-top 40px
		&:after
			content ''
			display block
			position absolute
			bottom 140px
			// bottom -52px
			left 0
			width 100%
			height 825px
			border 20px solid $red
			z-index 1
			@media custom
				width 100%
			@media lg
				width 100%
			@media md-all
				border 0px solid transparent
	.block
		position relative
		z-index 10
		width 50%
		@media md-all
			width 100%
		.block-item
			.titles
				.main-title
					max-width 642px
					color $white
					font-size 48px
					font-weight 800
					text-transform uppercase
					line-height 1
					@media custom
						font-size 40px
					@media lg
						font-size 40px
					@media md-all
						font-size 24px
				.item-red-items
					margin-top 35px
					@media md-all
						margin-top 20px
					.item-ttitle
						display inline-block
						padding 10px 30px
						color $white
						font-size 18px
						font-weight 700
						text-transform uppercase
						background-color $red
						&:first-child
							margin-right 10px
						@media md-all
							font-size 12px
							padding 6px 15px
		.bottom-text
			max-width 460px
			margin-top 60px
			@media md-all
				margin-top 30px
			.text-titles
				margin-bottom 20px
				padding-left 30px
				position relative
				&:before
					content ''
					width 11px
					height 18px
					position absolute
					left 0
					top 8px
					background-image url(/img/download-presentation/lines.png)
					background-position center
					background-repeat no-repeat
				.text-title
					margin-bottom 25px
					color $white
					font-size 24px
					font-weight 700
					line-height 30px
					text-transform uppercase
					@media custom
						font-size 22px
					@media lg
						font-size 22px
					@media md-all
						font-size 18px
						margin-bottom 5px
				.sub-title
					color $white
					font-size 16px
					font-weight 300
					line-height 22px
					text-transform uppercase
					@media md-all
						font-size 14px
					span
						color $red
	.block.human
		@media md-all
			margin-bottom 280px
			&:after
				content ''
				display block
				position absolute
				bottom -300px
				left 47%
				// margin-right -50%
				transform translate(-50%, 0)
				// transform translate(-50%, -50%)
				width 167px
				height 280px
				background-image url(/img/special-offer/human.png)
				background-position center
				background-repeat no-repeat
				background-size contain
				z-index 10
	.form
		width 70%
		@media md-all
			width 100%
			padding 0 25px
			&:after
				content ''
				display block
				position absolute
				// bottom 0
				bottom -40px
				left 0
				width 100%
				height 120%
				border 15px solid $red
				z-index 1
		.form-title
			margin-bottom 25px
			color $white
			font-size 30px
			font-weight 700
			line-height 1.1
			text-transform uppercase
			@media custom
				font-size 26px
			@media lg
				font-size 26px
			@media md-all
				font-size 24px
		.form-subtitle
			margin-bottom 45px
			color #7c7c7c
			font-size 16px
			font-weight 700
			line-height 1.1
			text-transform uppercase
			@media md-all
				font-size 14px
			span
				color $red
		.form-input
			margin-bottom 35px
			position relative
			z-index 20
			width 100%
			max-width 492px
			@media xs
				max-width 100%
			input
				width 100%
				padding-bottom 15px
				color $white
				font-size 24px
				font-weight 300
				line-height 1
				text-transform uppercase
				border-top none
				border-right none
				border-left none
				border-color #a3a3a3
				border-width 1px
				background-color transparent
				outline none
				@media custom
					font-size 22px
				@media lg
					font-size 22px
				@media md-all
					font-size 14px
				&:placeholder
					color #a3a3a3
		.form-submit
			margin-top 85px
			position relative
			z-index 10
			text-align right
			@media md-all
				margin-top 35px
				text-align left
			input
				cursor pointer
				width 351px
				padding 25px 0
				color $white
				font-size 24px
				font-weight 800
				line-height 1
				text-transform uppercase
				border none
				background-color $red
				box-shadow 0 31px 49px rgba(245, 38, 63, 0.44)
				@media md-all
					padding 15px 0
					width 220px
					font-size 18px
					padding 15px 0