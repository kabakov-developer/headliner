.info-quarter
	padding-bottom 100px
	.info-quarter-preveiw
		padding-top 55px
		// background-color #1d1d1d
		position relative	
		&:before
			content ''
			display inline-block
			top 0
			left 0
			right 0
			width 100%
			height 550px
			background-color #1d1d1d
			position absolute
			z-index 0
		.preview-title
			max-width 610px
			margin-left 320px
			color $white
			font-size 24px
			font-weight 300
			line-height 1.2
			text-transform uppercase
			position relative
			z-index 5
	.preview-blocks
		margin-top 65px
		display flex
		justify-content space-between
		align-items flex-start
		.block-item.block-big-number
			display flex
			flex-direction row 
			justify-content center
			align-items flex-start
			.item-number
				text-shadow 0 31px 49px rgba(245, 38, 63, 0.44)
				color #f5263f
				font-size 238px
				font-weight 700
				line-height .7
			.item-text
				max-width 150px
		.block-flex
			display flex
			flex-direction column
		.block-item
			position relative
			&:first-child
				width 35%
				&:after
					content ''
					background-color transparent
			&:after
				content ''
				display inline-block
				position absolute
				top 0
				right -50px
				width 1px
				height 233px
				background-color #343434
			.item-number
				text-shadow 0 31px 49px rgba(245, 38, 63, 0.44)
				color #f5263f
				font-size 102px
				font-weight 700
				line-height .7
				margin-bottom 15px
			.item-text
				max-width 170px
				color $white
				font-size 16px
				font-weight 300
				line-height 1.1
				text-transform uppercase
			.item-img
				// width 610px
				height 445px
				.img
					width 100%
					height 100%
					background-size cover
					background-position center
					background-repeat no-repeat
	.info-quarter-body
		.body-blocks
			display flex
			justify-content space-between
			.block-item
				&:first-child
					width 30%
					margin-right 120px
					@media lg
						margin-left 68px
				.item-text
					margin-top 90px
					// margin-right 115px
					padding-left 40px
					// max-width 495px
					color $black
					font-size 16px
					font-weight 400
					line-height 1.5
					text-transform uppercase
					position relative
					&:before
						content ''
						display inline-block
						position absolute
						left 0
						top 7px
						width 11px
						height 18px
						border 3px solid #f5263f
				.item-img
					.img
						width 100%
						height 100%
						background-size cover
						background-position center
						background-repeat no-repeat
				&:nth-child(2)
					width 30%
					// margin-left 120px
					// @media lg
					// 	margin-left 68px
					.item-img
						width 100%
						// width 400px
						height 367px
						position relative
						transform: translateY(-99px)
						&:before
							content ''
							position absolute
							left 0
							right 0
							top 0
							width 100%
							height 100%
							background-color rgba(245, 38, 63, .6)
						// img
						// 	width 100%
				&:nth-child(3)
					width 40%
					position relative
					&:after
						content ''
						position absolute
						display inline-block
						bottom -20px
						width 100%
						height 20px
						background-color $red
						
					.item-img
						width 100%
						// width 590px
						height 384px
						background-size cover
						background-position center
						background-repeat no-repeat
	.info-quarter-footer
		margin-top 20px
		.footer-block
			max-width 63%
			padding 75px 100px
			display flex
			flex-wrap wrap
			background-color #f0f0f0
			.block-item
				display flex
				align-items center
				width 45%
				margin-bottom 65px
				&:nth-child(3)
					margin-bottom 0
				&:nth-child(4)
					margin-bottom 0
				.item-img
					background-color $red
					display inline-block
					width 68px
					height 68px
					margin-right 30px
					.img
						width 100%
						height 100%
						background-size  auto
						background-position center
						background-repeat no-repeat
				.item-text
					.text-title
						color #1d1d1d
						font-size 20px
						font-weight 700
						line-height 1.5
					.text-sub-title
						color #1d1d1d
						font-size 14px
						font-weight 400
						line-height 1.5