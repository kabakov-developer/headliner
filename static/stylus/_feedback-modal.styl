.modal.feedback-modal
	.modal-dialog
		margin 0 auto
		padding 50px 0 0 0
		max-width 830px
		@media sm-xs
			max-width 100%
		.modal-content
			padding-bottom 50px
			border-radius 0
			border none
			.modal-header
				display flex
				flex-direction column
				justify-content center
				align-items center
				text-align center
				padding 45px 50px 45px 50px
				border-bottom none
				border-radius 0
				background-size cover
				background-position center
				background-repeat no-repeat
				@media sm-xs
					padding 35px 25px 25px 25px
				.close
					opacity 1
					padding 0
					// margin 26px -1rem -1rem auto
				.close *
					color $white
			.circle
				// border 1px solid #fff
				// border-radius 50%
				position absolute
				right 0
				top 3px
				width 43px
				height 43px
				display inline-block
				line-height 39px
				text-align center
			.fa-times-circle
				color #fff
				font-size 50px
			.header-title
				margin-bottom 25px
				color $white
				font-size 48px
				font-weight 900
				text-transform uppercase
				line-height 1
				@media sm-xs
					font-size 30px
			.header-sub-title
				color $white
				font-size 18px
				font-weight 400
				text-transform uppercase
				line-height 1
				@media sm-xs
					font-size 16px


	.modal-body
		padding 0
	.modal-body-container
		padding-top 10px
		form
			display flex
			justify-content center
			flex-direction column
			align-items center
			margin-top 25px
			@media xs
				width 100%
				padding 0 10px
		.form-item
			margin-bottom 30px
			@media xs
				width 100%
			input
				width 530px
				height 60px
				padding 15px
				border 1px solid #c6c6c6
				color #7d7d7d
				outline none
				@media sm
					width 400px
					height 60px
				@media xs
					width 100%
					height 60px
		.form-item-submit
			input
				width 300px
				height 60px
				line-height 60px
				text-align center
				vertical-align center
				color $white
				border none
				font-size 18px
				font-weight 900
				text-transform uppercase
				box-shadow 8px 20px 35px rgba(27, 79, 94, 0.4)
				background-image linear-gradient(-41deg, #411e92 0%, #0074cb 100%)
				border-radius 5px
				transition all .3s linear
				cursor pointer
				@media sm-xs
					margin-top 0
					width 290px
					height 60px
					line-height 60px